  <style>
    image { width: 300%; height: 300%; transform: translate(-35%, -50%) }
    @media screen and (min-width: 500px){
      image { width: 200%; height: 200%; transform: translate(-25%, -40%) }
    }
    @media screen and (min-width: 800px){
      image { width: 100%; height: 100%; transform: translate(0, 0) }
    }
  </style>
